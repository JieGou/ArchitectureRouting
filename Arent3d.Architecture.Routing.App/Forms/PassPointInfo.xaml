<UserControl x:Class="Arent3d.Architecture.Routing.App.Forms.PassPointInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Arent3d.Architecture.Routing.App.Forms"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <Label Grid.Column="0"
                      Grid.Row="0" Content="Coordinates" FontSize="20" />
        <Label Grid.Column="0"
                      Grid.Row="1" Content="{Binding XPoint,ElementName=root}" FontSize="20" Margin="0,0,-18.4,0" />
        <Label Grid.Column="0"
                      Grid.Row="1" Content="{Binding YPoint,ElementName=root}" FontSize="20" Margin="136,0,-155.4,0" />

        <Label Grid.Column="0"
                      Grid.Row="1" Content="{Binding ZPoint,ElementName=root}" FontSize="20" Margin="273,0,-286.4,0" />

    </Grid>
</UserControl>
