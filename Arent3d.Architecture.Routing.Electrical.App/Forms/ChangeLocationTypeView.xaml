<Window x:Class="Arent3d.Architecture.Routing.Electrical.App.Forms.ChangeLocationTypeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Location Type" Height="Auto" Width="400" UseLayoutRounding="True"
        WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <Border Margin="15 10 15 15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0" Text="Location Type" VerticalAlignment="Center" Margin="0 0 10 0"/>
            <ComboBox Grid.Column="1" Grid.Row="0" HorizontalContentAlignment="Stretch" Padding="6"/>
            <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Content="OK" Padding="5" Width="100" Margin="0 15 0 0" FontWeight="Bold"/>
        </Grid>
    </Border>
</Window>