<Window x:Class="Arent3d.Architecture.Routing.Electrical.App.Forms.RegisterSymbolView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Register Symbol View" SizeToContent="WidthAndHeight"
    MinHeight="500" MinWidth="750" x:Name="WdRegisterSymbolView" Topmost="True"
    WindowStartupLocation="CenterScreen" UseLayoutRounding="True" ResizeMode="NoResize">
    <Border Padding="10 0 10 10">
        <DockPanel LastChildFill="True">
            <DockPanel DockPanel.Dock="Bottom" LastChildFill="False" Margin="0 10 0 0">
                <Button DockPanel.Dock="Left" Width="75" Padding="5" Content="Browse..." FontWeight="Bold"
                        Command="{Binding Path=BrowseCommand}" CommandParameter="{Binding ElementName=WdRegisterSymbolView}"/>
                <Button DockPanel.Dock="Right" Width="75" Padding="5" Margin="5 0 0 0" Content="Save" FontWeight="Bold"/>
                <Button DockPanel.Dock="Right" Width="75" Padding="5" Margin="0 0 5 0" Content="OK" FontWeight="Bold"/>
            </DockPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <DockPanel Grid.Column="0" LastChildFill="True">
                    <Label DockPanel.Dock="Top" Content="Folder Tree" FontWeight="Bold" Padding="0 0 0 5"></Label>
                    <TreeView VerticalAlignment="Stretch" VerticalContentAlignment="Top"
                              BorderBrush="LightGray" BorderThickness="1">
                    
                    </TreeView>
                </DockPanel>
                <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Label DockPanel.Dock="Top" Content="Preview" FontWeight="Bold" Padding="5 0 0 5"></Label>
                </StackPanel>
            </Grid>
        </DockPanel>
    </Border>
</Window>