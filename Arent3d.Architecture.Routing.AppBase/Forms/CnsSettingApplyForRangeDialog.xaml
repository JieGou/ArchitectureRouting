<Window x:Class="Arent3d.Architecture.Routing.AppBase.Forms.CnsSettingApplyForRangeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Arent3d.Architecture.Routing.AppBase.Forms"
        mc:Ignorable="d"
        Title="工事項目名称変更" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DataGridConstructionItem" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="20" Binding="{Binding ItemIndex}"/>
                <DataGridTextColumn Header="工事項目名称(変更前)" Width="180" Binding="{Binding OldConstructionItem}"/>
                <DataGridTextColumn Header="工事項目名称(変更後)" Width="180" Binding="{Binding NewConstructionItem}"/>    
            </DataGrid.Columns> 
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="確定" Width="80" Click="BtnOK_OnClick" Margin="10 0"/>
            <Button Content="キャンセル" Width="80" Click="BtnCancel_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
