<Window x:Class="Arent3d.Architecture.Routing.AppBase.Forms.PullBoxDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Arent3d.Architecture.Routing.AppBase.Forms"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="PullBoxDialog" Height="200" Width="400">
    <Grid>
        <Border Padding="10">

            <StackPanel Orientation="Vertical" Width="350" Height="140" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="TopLevelContainer">
                <StackPanel Orientation="Horizontal" Margin="0 0  0 10">
                    <Label Content="Height" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Margin="0 0 5 0" />
                    <TextBox Name="TxtHeight" HorizontalAlignment="Left" Width="200" PreviewTextInput="NumberValidationTextBox" Padding="5" Text="{Binding HeightConnector}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0 0  0 10">
                    <Label Content="Height Wire" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Margin="0 0 5 0" />
                    <TextBox Name="TxtHeightWire" HorizontalAlignment="Left" Width="200" PreviewTextInput="NumberNegativeValidationTextBox" Padding="5" Text="{Binding HeightWire}"/>
                    <!--      <local:NumericUpDownEx x:Name="FromFixedHeightNumericUpDown" -->
                    <!--                        ValueChanged="FromFixedHeightNumericUpDown_OnValueChanged" -->
                    <!--                        TextAlignment="Right" -->
                    <!--                        Increment="100" -->
                    <!--                        Width="80"> -->
                    <!--     <local:NumericUpDownEx.Style> -->
                    <!--         <Style TargetType="{x:Type local:NumericUpDownEx}"> -->
                    <!--             -->
                    <!--         </Style> -->
                    <!--     </local:NumericUpDownEx.Style> -->
                    <!-- </local:NumericUpDownEx> -->
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="300" VerticalAlignment="Center" Margin="0 0  0 10">
                    <Button Content="作成" Margin="120 0" Width="70" Height="25" Click="Button_Ok" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
