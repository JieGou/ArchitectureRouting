<Window x:Class="Arent3d.Architecture.Routing.AppBase.Forms.PickUpReportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Arent3d.Architecture.Routing.AppBase.Forms"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="拾い表作成" Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="135" />
            <RowDefinition Height="100" />
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" x:Name="BtnRegister"
                Content="登録"
                Click="Button_Register"
                Margin="10,10,230,0"
                HorizontalAlignment="Right"
                Width="100" />
        <Button Grid.Row="0" x:Name="BtnDelete"
                Content="削除"
                Click="Button_Delete"
                Margin="10,10,120,0"
                HorizontalAlignment="Right"
                Width="100" />
        <Button Grid.Row="0" x:Name="BtnDeleteAll"
                Content="全削除"
                Click="Button_DeleteAll"
                Margin="10,10,10,0"
                HorizontalAlignment="Right"
                Width="100" />

        <Label Grid.Row="1" Content="対象ファイルー覧" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,10,5" FontSize="18" />
        <DataGrid x:Name="DtGrid" Grid.ColumnSpan="2" Grid.Row="2" ItemsSource="{Binding TargetFileModels}" CanUserAddRows="False" AutoGenerateColumns="False" Margin="10,0,10,10">
            <DataGrid.Resources>
                <Style x:Key="ErrorStyle" TargetType="{x:Type TextBox}">
                    <Setter Property="Padding" Value="-2" />
                    <Style.Triggers>
                        <Trigger Property="Validation.HasError" Value="True">
                            <Setter Property="ToolTip"
                                    Value="{Binding RelativeSource={RelativeSource Self},
                    Path=(Validation.Errors)[0].ErrorContent}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>

                <DataGridTextColumn Header="名前" Binding="{Binding Name, ValidatesOnExceptions=True}" CanUserSort="False" IsReadOnly="True" MinWidth="250" />

                <DataGridTextColumn Header="サイズ" Binding="{Binding Size, ValidatesOnExceptions=True}" CanUserSort="True" IsReadOnly="True" MinWidth="100" />

                <DataGridTextColumn Header="更新日" Binding="{Binding UpdateDate, ValidatesOnExceptions=True}" CanUserSort="False" IsReadOnly="True" MinWidth="150" />

                <DataGridTextColumn Header="フォルダ名" Binding="{Binding FolderName, ValidatesOnExceptions=True}" CanUserSort="False" IsReadOnly="True" MinWidth="200" />

                <DataGridTextColumn Header="フル..." Binding="{Binding Full, ValidatesOnExceptions=True}" CanUserSort="False" IsReadOnly="True" MinWidth="100" />

            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Grid.Row="3" Header="出力ファイル種類" DockPanel.Dock="Left" Width="180" Height="115" FontSize="16" VerticalAlignment="Top" Margin="10" HorizontalAlignment="Left">
            <ListBox Name="LbFileType" HorizontalContentAlignment="Stretch" BorderBrush="White" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox IsChecked="{Binding TheValue}" Content="{Binding TheText}" Margin="5, 5, 0, 0" FontSize="14" Checked="FileType_Checked" Unchecked="FileType_Unchecked" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <GroupBox Grid.Row="3" Header="出力項目" DockPanel.Dock="Left" Width="220" Height="115" FontSize="16" VerticalAlignment="Top" Margin="190, 10, 10, 10" HorizontalAlignment="Left">
            <DockPanel>
                <ListBox Name="LbOutputItem" HorizontalContentAlignment="Stretch" Width="140" BorderBrush="White" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <RadioButton GroupName="OutputItem" IsChecked="{Binding TheValue}" Content="{Binding TheText}" Margin="5, 5, 0, 0" FontSize="14" Checked="OutputItem_Checked"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button x:Name="BtnSetting"
                        Content="設定"
                        Click="Button_Setting"
                        Margin="0,0,10, 0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Height="35"
                        Width="50" 
                        IsEnabled="False"/>
            </DockPanel>
        </GroupBox>
        
        <GroupBox Grid.Row="3" Header="ドーコン" DockPanel.Dock="Left" Width="100" Height="115" FontSize="16" VerticalAlignment="Top" Margin="410, 10, 10, 10" HorizontalAlignment="Left">
            <ListBox Name="LbDocon" HorizontalContentAlignment="Stretch" BorderBrush="White" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <RadioButton GroupName="Docon" IsChecked="{Binding TheValue}" Content="{Binding TheText}" Margin="5, 5, 0, 0" FontSize="14" Checked="DoconItem_Checked"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <StackPanel Grid.Row="3" HorizontalAlignment="Right" Margin="420, 40, 10, 10">
            <DockPanel Margin="0,5,0,0">
                <Label Content="工事名称" Width="170" VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Right" />
                <TextBox Name="TbConstructionName" Width="300" VerticalContentAlignment="Center" FontSize="14" />
            </DockPanel>
            <DockPanel Margin="0,5,0,0">
                <Label Content="階数(最上階、最下階)" Width="170" VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Right" />
                <TextBox Name="TbNumberOfFloor" Width="300" VerticalContentAlignment="Center" FontSize="14" />
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Row="4" HorizontalAlignment="Left" Margin="10, 10, 10, 10">
            <DockPanel Margin="10,5,0,0">
                <Label Content="出力フォルダ" Width="130" FontSize="16" />
                <TextBox Name="TbFolder" Width="500" VerticalContentAlignment="Center" FontSize="14" IsEnabled="False" />
                <Button x:Name="BtnReference"
                        Content="参照"
                        Click="Button_Reference"
                        Margin="20,0,0, 0"
                        HorizontalAlignment="Right"
                        Width="100" />
            </DockPanel>
            <DockPanel Margin="10,5,120,0">
                <Label Content="出力ファイル名" Width="130" FontSize="16" />
                <TextBox Name="TbFileName" Width="500" VerticalContentAlignment="Center" FontSize="14" IsEnabled="False" />
            </DockPanel>
        </StackPanel>

        <Button Grid.Row="6" x:Name="BtnExecute"
                Content="処理実行"
                Click="Button_Execute"
                Margin="10,0,130,20"
                HorizontalAlignment="Right"
                Width="100" />
        <Button Grid.Row="6" x:Name="BtnCancel"
                Content="キャンセル"
                Click="Button_Cancel"
                Margin="10,0,10,20"
                HorizontalAlignment="Right"
                Width="100" />
    </Grid>
</Window>