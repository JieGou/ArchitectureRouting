<Window x:Class="Arent3d.Architecture.Routing.AppBase.Forms.CreateTableByFloors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arent3d.Architecture.Routing.AppBase.Forms"
        mc:Ignorable="d"
        Title="Create Table By Floors" Height="Auto" Width="800" SizeToContent="Height" ResizeMode="NoResize">
    <Grid Margin="10 0 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="300" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" HorizontalAlignment="Left" Text="Select floors:" FontWeight="Bold"/>
            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Text="Select table type:" FontWeight="Bold" Margin="10 0 0 0"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListBox Grid.Column="0" VerticalAlignment="Top" Padding="5" Height="300" ItemsSource="{Binding LevelList, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox IsChecked="{Binding IsSelected}" Content="{Binding LevelName}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <ComboBox Margin="10 0 0 0"
                          VerticalAlignment="Top" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                          ItemsSource="{Binding TableTypes, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                          SelectedItem="{Binding SelectedTableType, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                          IsSynchronizedWithCurrentItem="True"
                          SelectedIndex="0">
                </ComboBox>
                <CheckBox x:Name="CheckBoxEachFloor" Margin="10 10 0 0" Content="Create a table for each floor"></CheckBox>
            </StackPanel>
        </Grid>
       
        <StackPanel Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Height="24"
                        Grid.Column="0" Grid.Row="0"
                        Content="Check" Click="CheckAll"
                        Margin="0,10,5,0" />
                <Button Height="24"
                        Grid.Column="1" Grid.Row="0"
                        Content="Uncheck" Click="UncheckAll"
                        Margin="5,10,5,0" />
                <Button Height="24"
                        Grid.Column="2" Grid.Row="0"
                        Content="Toggle" Click="ToggleAll"
                        Margin="5,10,0,0" />
            </Grid>
            <Button Content="Select" Height="32" Click="SelectButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
