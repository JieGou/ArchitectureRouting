<Window x:Class="Arent3d.Architecture.Routing.AppBase.Forms.SymbolInformationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Arent3d.Architecture.Routing.AppBase.Forms"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Symbol Information" Height="700" Width="900" 
        d:DataContext="{d:DesignInstance {x:Type local:DesignSymbolInformationViewModel}, IsDesignTimeCreatable=True}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="170"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>

        <!--Descriptions-->
        <StackPanel Orientation="Vertical" Margin="10 5">
            <Label Content="拾う部品のセットコード名コード、部材コードのいずれかを入力しEnterキーを押してください"></Label>
            <Label Content="セット部品の内容確認、登録を行う場合は「内容確認-登録（F2）」ボタンを押してください。"></Label>
        </StackPanel>

        <!--Filter-->
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10 0">
            <Label Content="セットコード" Margin="10,5" />
            <ComboBox Width="150" Height="22" />
            <Button Content="内容確認-登録（F2）" Height="22" Margin="10, 5" />
            <Label HorizontalAlignment="Right" Content="略名コード" Margin="10,5" />
            <ComboBox Width="150" Height="22" />
            <Label Content="部材コード" Margin="10,5" />
            <ComboBox Width="150" VerticalContentAlignment="Center" Name="ConstructionClassificationCombobox"
                      Height="22" Margin="10,5" />
        </StackPanel>

        <!--Data Grid Result-->
        <DataGrid Grid.Row="2" Margin="10 10">
            <DataGrid.Resources>
                <Style x:Key="ErrorStyle" TargetType="{x:Type TextBox}">
                    <Setter Property="Padding" Value="-2" />
                    <Style.Triggers>
                        <Trigger Property="Validation.HasError" Value="True">
                            <Setter Property="ToolTip"
                                    Value="{Binding RelativeSource={RelativeSource Self},
                    Path=(Validation.Errors)[0].ErrorContent}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>

                <DataGridTextColumn Header="品名コード" Width="150"
                                    Binding="{Binding ProductCode, ValidatesOnExceptions=True}" CanUserSort="False"
                                    IsReadOnly="True" />

                <DataGridTextColumn Header="品名" Width="250" Binding="{Binding ProductName, ValidatesOnExceptions=True}"
                                    CanUserSort="True" IsReadOnly="True" />

                <DataGridTextColumn Header="規格" Width="250" Binding="{Binding Standard, ValidatesOnExceptions=True}"
                                    CanUserSort="False" IsReadOnly="True" />

                <DataGridTextColumn Header="個数" Width="100" Binding="{Binding Quantity, ValidatesOnExceptions=True}"
                                    CanUserSort="False" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>

        <!--Symbol setting-->
        <Grid Grid.Row="3" Margin="10 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--Group box setting-->
            <GroupBox Header="Symbol setting">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="450" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!--Group box-->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Content="Kind" />
                            <ComboBox Width="70" Height="22" VerticalContentAlignment="Center" Name="CbSymbolKind" />
                            <Label Content="Height" />
                            <TextBox Width="50" Height="22" />
                            <Label Content="mm Percent" />
                            <TextBox Width="50" Height="22" />
                            <Label Content="% Color" />
                            <ComboBox Width="50" Height="22" />
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <CheckBox Content="Square Letter" Margin="10 0 10 0" Width="100" />
                            <TextBox Width="280" Height="20" />
                        </StackPanel>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Content="Coordinate" />
                            <ComboBox Width="70" Height="22" Name="CbSymbolCoordinate"/>
                            <Label Content="Height" Margin="20 0 5 0" />
                            <TextBox Width="100" Height="22"/>
                        </StackPanel>
                    </Grid>
                    <!--Preview-->
                    <StackPanel Grid.Column="1">
                        <Label Content="Preview" VerticalAlignment="Top" />
                        <Image Height="120" Width="120" />
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!--OK/Cancel button-->
        <local:Dialog2Buttons Grid.Row="4" Margin="15 5"
                              LeftButton="OK"
                              RightButton="Cancel"
                              VerticalAlignment="Top"
                              HorizontalAlignment="Right" />
    </Grid>
</Window>