<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:CnsSettingRules="clr-namespace:Arent3d.Architecture.Routing.AppBase.Forms.ValidationRules.CnsSettingRules"
    x:Class="Arent3d.Architecture.Routing.AppBase.Forms.CnsSettingDialog"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    Closing="CnsSettingDialog_Closing"
    d:DesignHeight="600" d:DesignWidth="500" Width="500" Height="600">
    <DockPanel Margin="5">
        <StackPanel DockPanel.Dock="Left" Width="350">
            <Label Margin="2,15,2,10">未付加の部品は1行目の工事項目名称で拾われます</Label>
            <Grid Width="350" Height="570" Margin="0" DockPanel.Dock="Top">
                <DataGrid x:Name="grdCategories"
                          ItemsSource="{Binding CnsSettingModels}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          Margin="2,0,2,40" IsReadOnly="True" CellEditEnding="GrdCategories_OnCellEditEnding" >
                    <DataGrid.Resources>
                        <Style x:Key="errorStyle" TargetType="{x:Type TextBox}">
                            <Setter Property="Padding" Value="-2" />
                            <Style.Triggers>
                                <Trigger Property="Validation.HasError" Value="True">
                                    <Setter Property="ToolTip"
                                            Value="{Binding RelativeSource={RelativeSource Self},
                  Path=(Validation.Errors)[0].ErrorContent}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="" IsReadOnly="True">
                            <DataGridTextColumn.Binding>
                                <Binding Path="Sequence" NotifyOnTargetUpdated="True"
                                         UpdateSourceTrigger="PropertyChanged" Mode="TwoWay" />
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="工事項目名称" Width="280"
                                            EditingElementStyle="{StaticResource errorStyle}">
                            <DataGridTextColumn.Binding>
                                <Binding Path="CategoryName" NotifyOnTargetUpdated="True"
                                         UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                    <Binding.ValidationRules>
                                        <CnsSettingRules:CnsSettingValidationRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </StackPanel>
        <StackPanel DockPanel.Dock="Right" Width="100">
            <Button Content="行追加" Height="32" Margin="0,10,0,0" Click="AddNewRow_Click"/>
            <Button Content="行削除" Height="32" Margin="0,10,0,0" Click="Delete_Click"
                     CommandParameter="{Binding ElementName=grdCategories, Path=SelectedIndex}" >
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedItems.Count,ElementName=grdCategories}" Value="0">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="編集" Height="32" Click="Update_Click" Margin="0,10,0,0">
                <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedItems.Count,ElementName=grdCategories}" Value="0">
                            <Setter Property="IsEnabled" Value="False" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
                </Button.Style>
            </Button>
            <Button Content="ハイライト" IsEnabled="False" Height="32" Margin="0,10,0,0" />
            <Button Content="読込み" Height="32" Margin="0,10,0,0" Click="Import_Click" />
            <Button Content="書出し" Height="32" Margin="0,10,0,0" Click="Export_Click" />
            <Button Content="シンボルに適用" CommandParameter="{Binding ElementName=grdCategories, Path=SelectedIndex}" Click="SymbolApply_Click"
                    Height="32" Margin="0,10,0,0">
                       <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedItems.Count,ElementName=grdCategories}" Value="0">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="配線に適用" Click="ConduitsApply_Click" Height="32" Margin="0,10,0,0" >
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedItems.Count,ElementName=grdCategories}" Value="0">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="保存" Click="Save_Click" Height="32" Margin="0,10,0,0" />
        </StackPanel>
    </DockPanel>
</Window>
